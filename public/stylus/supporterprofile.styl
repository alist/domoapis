body
  height 100%
  font-family 'Helvetica-Light', 'Arimo', 'Helvetica Neue'
  background-color #f0f0f0;
  background-image url("/img/patternsquare_green.png")
  background-repeat repeat

a
  position relative
  text-decoration none
  &:hover
    color dGreen
  &:active
    top 1px
  &:visited
    color Green

.main
  position fixed
  top 20px
  bottom 20px
  left 50px
  right 50px
  background-color #fff
  padding-right 50px
  padding-left 50px
  padding-top 10px

  .intro
    text-align center
    font-size 18pt
    color Green

  .org
    overflow hidden
    padding 5px
    margin-bottom 1px
    font-size 14pt
    width 100%
    height 50px
    line-height 50px
    background-color #eee
    &:hover { background-color: #ddd; }

    .banner
      display none