@import '/usr/local/lib/node_modules/nib/lib/nib'

global-reset()

blue = #377ad0 
tbRed = #de4044
tbBlack = #414042 
*
  margin 0
  padding 0
  border 0

html
  background #354a4c
  height 100%

body
  color white
  font-family 'Interstate', 'Helvetica', sans-serif
  margin 0 auto
  background transparent
  height 100%

@font-face
  font-family 'Interstate'
  src url("/fonts/Interstate.eot"); /* IE */
  src local('Interstate'), url('/fonts/Interstate.ttf') format('truetype');

@font-face
  font-family 'Interstate'
  src url("/fonts/Interstate-bold.eot"); /* IE */
  src local('Interstate'), url('/fonts/Interstate-bold.ttf') format('truetype');
  font-weight bold

@font-face
  font-family 'Interstate'
  src url("/fonts/Interstate-light.eot"); /* IE */
  src local('Interstate'), url('/fonts/Interstate-light.ttf') format('truetype');
  font-weight lighter

