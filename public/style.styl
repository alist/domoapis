@import '/usr/local/lib/node_modules/nib/lib/nib'

global-reset()

blue = #377ad0 
dBlack = #414042 
dGreen = #01a351;
*
  border 0

footer
  margin-top 30px
  text-align center
  margin-bottom 5px
  
a
  position relative
  color blue
  text-decoration none
  &:hover
    color darken(blue, 20%)
    text-decoration underline
  &:active
    top 1px


.media-body
 padding-left 110px
 a
  color dBlack
  &:hover
    color darken(blue, 20%)
    text-decoration none

section
 margin-bottom 35px

section#apps
 .page-header
   border-top: 1px solid #eee;
   border-bottom: 0px solid #eee;

.header
  height 60px
  background-color #F8F8F8
  border-bottom-color #E0E0E0
  border-bottom-style solid
  border-bottom-width 1px

.contentHeaderText
 color white
 font-size 36px
 margin-top 140px
 font-weight bold
 float right
 line-height 35px

 text-shadow 0px 2px 7px #000000

.contentHeader
 background-color #F0F0F0 
 background-image url("/img/domo-website-home-header-bg.png")
 background-repeat no-repeat
 background-position center bottom
 height 360px
 border-bottom-color #E1E1E1
 border-bottom-style solid
 border-bottom-width 0px
 border-top-color #EBEBEB
 border-top-style solid
 border-top-width 0px
 box-shadow inset 0px -2px 3px #AAA
 background-size 1020px

.container-fluid
  margin-left auto
  margin-right auto
  max-width 940px

.headerControls 
  float right
  margin-top 20px

.content h1
  coLor: dGreen

@media (max-width:480px)
  .hidden-phone
    display none
  .visible-phone
    display block
@media (min-width: 768px)
  .hidden-desktop
    display none

.content
  margin-top 5px
  background-color white
  border-bottom-color #E1E1E1
  border-bottom-style solid
  border-bottom-width 1px

.homeHeader
  height 54px
  display inline
  margin-top 5px

.headerAlert
  display inline
  float left
  padding 5px 14px 5px 14px
  color #C09853
  text-shadow 0 1px 0 rgba(255, 255, 255, 0.5)
  background-color #FCF8E3
  border 1px solid #FBEED5
  -webkit-border-radius 4px
  -moz-border-radius 4px
  border-radius 4px

#writeUsButton
  margin-left 0px

.inline
  display inline

.hidden
  display none

.invisible
  visibility hidden

.text-warning 
  color: #c09853;

.text-error 
  color: #b94a48;

.text-info 
  color: #3a87ad;

.text-success 
  color: #468847;

.center
  margin-left auto
  margin-right auto

.userLoginOutButton
  width 50px
  margin-top 4px
  margin-left 5px

.headerButtonRight
  float right
  margin-top 10px

.reward
  height 277px

.rewardQuantity
  float right
  margin-top 22px

@media (max-width: 480px)
  #rewardBox
    background-color white
    border 0

.fade-overlay {
   position absolute
   background-position center
   opacity 0.0
   width 100%
   height 100%
   border-radius 50%
}
