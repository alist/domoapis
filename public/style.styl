@import '/usr/local/lib/node_modules/nib/lib/nib'

global-reset()

blue = #377ad0 
tbRed = #de4044
tbBlack = #414042 
tbGreen = #354a4c
*
  border 0

footer
  margin-top 30px
  text-align center
  
a
  position relative
  color blue
  text-decoration none
  &:hover
    color darken(blue, 20%)
    text-decoration underline
  &:active
    top 1px

.header
  height 60px
  background-color #F8F8F8
  border-bottom-color #E0E0E0
  border-bottom-style solid
  border-bottom-width 1px

.contentHeader
 background-color #F0F0F0 
 border-bottom-color #E1E1E1
 border-bottom-style solid
 border-bottom-width 1px
 border-top-color #EBEBEB
 border-top-style solid
 border-top-width 3px

.content
  background-color white
  border-bottom-color #E1E1E1
  border-bottom-style solid
  border-bottom-width 1px

.homeHeader
  width 330px
  display inline

.logoutButton
  float right
  width 50px
  margin-top 14px
