@import '/usr/local/lib/node_modules/nib/lib/nib'

global-reset()

blue = #377ad0 
tbRed = #de4044
tbBlack = #414042 
tbGreen = #354a4c
*
  border 0

footer
  margin-top 30px
  text-align center
  
a
  position relative
  color blue
  text-decoration none
  &:hoveR
    color darken(blue, 20%)
    text-decoration underline
  &:active
    top 1px

.header
  height 60px
  background-color #F8F8F8
  border-bottom-color #E0E0E0
  border-bottom-style solid
  border-bottom-width 1px

.contentHeaderText
 color white
 font-size 36px
 margin-top 240px
 font-weight bold
 text-shadow 0px 2px 7px #000000

.contentHeader
 background-color #F0F0F0 
 background-image url("/img/adhearean-website-home-header-bg.png")
 background-repeat no-repeat
 background-position center bottom
 height 300px
 border-bottom-color #E1E1E1
 border-bottom-style solid
 border-bottom-width 1px
 border-top-color #EBEBEB
 border-top-style solid
 border-top-width 0px

.content
  margin-top 5px
  background-color white
  border-bottom-color #E1E1E1
  border-bottom-style solid
  border-bottom-width 1px

.homeHeader
  width 215px
  display inline
  margin-top 5px

.logoutButton
  float right
  width 50px
  margin-top 19px
