@import '/usr/local/lib/node_modules/nib/lib/nib'

global-reset()

blue = #377ad0 
tbRed = #de4044
tbBlack = #414042 
tbGreen = #354a4c
*
  border 0

footer
  margin-top 30px
  text-align center
  
a
  position relative
  color blue
  text-decoration none
  &:hoveR
    color darken(blue, 20%)
    text-decoration underline
  &:active
    top 1px

.header
  height 60px
  background-color #F8F8F8
  border-bottom-color #E0E0E0
  border-bottom-style solid
  border-bottom-width 1px

.contentHeaderText
 color white
 font-size 36px
 margin-top 240px
 font-weight bold
 text-shadow 0px 2px 7px #000000

.contentHeader
 background-color #F0F0F0 
 background-image url("/img/adhearean-website-home-header-bg.png")
 background-repeat no-repeat
 background-position center bottom
 height 300px
 border-bottom-color #E1E1E1
 border-bottom-style solid
 border-bottom-width 0px
 border-top-color #EBEBEB
 border-top-style solid
 border-top-width 0px
 box-shadow inset 0px -2px 3px #AAA

.headerControls 
  float right
  margin-top 20px

.content
  margin-top 5px
  background-color white
  border-bottom-color #E1E1E1
  border-bottom-style solid
  border-bottom-width 1px

.homeHeader
  width 215px
  display inline
  margin-top 5px

.headerAlert
  display inline
  float left
  padding 5px 14px 5px 14px
  color #C09853
  text-shadow 0 1px 0 rgba(255, 255, 255, 0.5)
  background-color #FCF8E3
  border 1px solid #FBEED5
  -webkit-border-radius 4px
  -moz-border-radius 4px
  border-radius 4px

.inline
  display inline

.hidden
  display none

.text-warning 
  color: #c09853;

.text-error 
  color: #b94a48;

.text-info 
  color: #3a87ad;

.text-success 
  color: #468847;

.center
  margin-left auto
  margin-right auto

.userLoginOutButton
  width 50px
  margin-top 4px
  margin-left 5px
